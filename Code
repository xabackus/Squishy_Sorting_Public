        <drake:proximity_properties>
          <drake:compliant_hydroelastic/>
          <drake:hydroelastic_modulus>5.0e4</drake:hydroelastic_modulus>
        </drake:proximity_properties>
      </collision>

      <visual name="right_ear_visual">
        <pose>0.09 -0.015 0.08 0 0 0</pose>
        <geometry>
          <box>
            <size>0.01 0.005 0.015</size>
          </box>
